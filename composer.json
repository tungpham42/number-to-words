{
    "name": "tungpham42/number-to-words",
    "type": "library",
    "description": "Thư viện hổ trợ chuyển đổi số sang chữ số.",
    "keywords": [
        "phpviet",
        "number-to-words"
    ],
    "homepage": "https://github.com/tungpham42/number-to-words",
    "license": "MIT",
    "authors": [
        {
            "name": "Tung Pham",
            "email": "tung.42@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.5",
        "scrutinizer/ocular": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "PHPViet\\NumberToWords\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPViet\\NumberToWords\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\""
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
	}
}
